SManager:
    GameScreen

<MDCard>:
    radius: [dp(4),dp(4),dp(4),dp(4)]
    elevation: 30
    md_bg_color:0.62,0.66,0.73,1
<MDLabel>:
    color:(1,1,1,1)

<Content>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: dp(150)
    MDLabel:
        size_hint_y:0.03
        markup:True
        text:"[color=#9ea9bb]Wyślij raport o błędzie[/color]"
        halign:"center"
    MDTextField:
        size_hint_y:0.55
        id:error_text
        text_color:0.62,0.66,0.73,1
        hint_text:"Opis błędu"
        mode:"rectangle"
    MDGridLayout:
        size_hint_y:0.4
        cols:3
        MDBoxLayout:
            size_hint_x:0.25
        MDRaisedButton:
            text:'[color=#FFFFFF]wyślij[/color]'
            md_bg_color:0.62,0.66,0.73,1
            on_release:app.send_bug_report(error_text.text)
        MDBoxLayout:
            size_hint_x:0.25

<ResetContent>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: dp(100)
    MDLabel:
        markup:True
        text:"[color=#9ea9bb]Czy na pewno chcesz wylosować nowe hasło? Stracisz 5 punktów.[/color]"
        halign:"center"
    MDGridLayout:
        cols:3
        MDBoxLayout:
            size_hint_x:0.25
        MDRaisedButton:
            text:'[color=#FFFFFF]potwierdź[/color]'
            md_bg_color:0.62,0.66,0.73,1
            on_release:app.word_reset()
        MDBoxLayout:
            size_hint_x:0.25


